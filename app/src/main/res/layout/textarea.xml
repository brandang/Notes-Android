<?xml version="1.0" encoding="utf-8"?>

<!-- Dont set singleLine to true because that would mean that it moves focus onto something else
when user presses enter. In that case, it would close keyboard when user does that. So workaround is
to set the max number of lines to 1. -->
<com.example.notes.TextArea
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/text_area_unselected"
    android:singleLine="false"
    android:textColor="@color/textColor"
    android:textColorHighlight="@color/textHighlightColor">

</com.example.notes.TextArea>